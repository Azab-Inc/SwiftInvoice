---
const { os, color, title, url, isReady } = Astro.props;
---

<div
  class="flex w-1/3 flex-col items-center justify-center gap-3 rounded-md border-[1px] border-accent p-3"
>
  <i class=`fa-brands fa-${os} text-5xl text-[${color}]`></i>
  <h3 class="text-accent">Download for {title}</h3>
  {
    isReady && (
      <a href={url}>
        <button class="btn btn-pri">Download</button>
      </a>
    )
  }
  {!isReady && <span class="text-accent">Coming soon</span>}
</div>
