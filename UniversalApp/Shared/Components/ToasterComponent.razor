<div class="flex justify-between border-2 px-5 py-3 rounded-md text-white
    @(Type == "danger" ? "bg-red-500 border-red-800" :
      Type == "success" ? "bg-green-500 border-green-800" :
      Type == "warn" ? "bg-yellow-500 border-yellow-800" : "")">
    <h2>@Message</h2>

    @if (Redirect)
    {
        <a href="@Url"><button>Go to @Location</button></a>
    }
</div>

@code {
    [Parameter] public string Message { get; set; }
    [Parameter] public string Type { get; set; }

    [Parameter] public bool Redirect { get; set; }
    [Parameter] public string Location { get; set; }
    [Parameter] public string Url { get; set; }
}
