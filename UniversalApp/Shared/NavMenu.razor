            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">            
            <a href="">Home</a>
            <a href="/showall">All invoices</a>
        </div>
    </nav>
